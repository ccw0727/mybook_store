<h1> Librarys</h1>
<%= link_to "新增書籍", new_library_path(@library) ,class: "btn btn-primary"%>


<table class= "table table-hover ">

  <thead>
  <tr>
    <td></td>
    <td>書名</td>
    <td>簡介</td>
    <td>作者姓名</td>
    <td>售價</td>
  </tr>
  </thead>
  
 <% @librarys.each do |library| %>
<tbody>
   
   <tr>
  <td><%= library.bookName,library_path(library)%></td>
  <td><%= library.intro %></td>
  <td><%= library.authorName %></td>
  <td><%= library.price %></td>
     <td>
       <%= link_to "edit" ,class: "btn btn-success btn-xs"%>
       <%= link_to "delete",library,method: "delete" ,data: {confirm:'delete!?'}, class: "btn btn-danger btn-xs" %>
     </td>
  </tr>
   <%end%> 
</tbody>


 </table>